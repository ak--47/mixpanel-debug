{
  "manifest_version": 3,
  "default_locale": "en",

  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "1.0.0",

  "icons": {
	"32": "images/32x32.png",
    "48": "images/48x48.png",
    "96": "images/96x96.png",
    "128": "images/128x128.png"
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["storage", "webRequest"],

  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "matches": ["*://example.com/*"]
    }
  ],

  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
		"32": "images/32x32.png",
		"48": "images/48x48.png",
		"96": "images/96x96.png",
		"128": "images/128x128.png"
    }
  },

  

  "options_ui": {
    "page": "public/settings.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "mixpanel-debug"
    }
  }
}
